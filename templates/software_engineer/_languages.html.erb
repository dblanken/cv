<% if @config.respond_to?("Languages") %>
  <div class="rvt-card">
    <div class="rvt-card__body">
      <h2 class="rvt-card__title">
        <a id="languages" href="#top">Languages</a>
      </h2>
      <div class="rvt-card__content [ rvt-flow ]">
        <% @config.languages.each do |language| %>
          <p><%= language %></p>
        <% end %>
      </div>
    </div>
  </div>
  <a class="rvt-button" href="#top">Top</a>
<% end %>
