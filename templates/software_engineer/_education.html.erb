<% if @config.respond_to?("education") %>
  <div class="rvt-card">
    <div class="rvt-card__body">
      <h2 class="rvt-card__title">
        <a id="education" href="#top">Education</a>
      </h2>
      <% @config.education.each do |education| %>
        <div class="rvt-card__content [ rvt-flow ]">
          <h3><%= education["Entity"] %></h3>
          <div>
            <%= education["Location"] %>
            (<%= education["Started"] %> - <%= education["Stopped"] %>)
          </div>
          <ul>
            <% education["Details"].each do |detail| %>
              <li><%= detail %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <a class="rvt-button" href="#top">Top</a>
<% end %>
