<% if @config.respond_to?("contact") %>
  <div class="rvt-card">
    <div class="rvt-card__body">
      <h2 class="rvt-card__title">
        <a id="contact" href="#top">Contact Information</a>
      </h2>
      <div class="rvt-card__content [ rvt-flow ]">
        <ul class="rvt-link-hub">
          <% @config.contact.each do |key, value| %>
            <li class="rvt-link-hub__item">
              <a class="rvt-link-hub__link" href="<%= ContactLinker.for(key, value) %>" target="_blank">
                <span class="rvt-link_hub__text"><%= key %>: <%= value %></span>
              </a>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
  <a class="rvt-button" href="#top">Top</a>
<% end %>
